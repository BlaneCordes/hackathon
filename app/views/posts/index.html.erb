<%- model_class = Post -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Score</th>
      <th>Peoples Opinions</th>
      <th>Commenter</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.score %>
          <div class="arrows">
            <div class="up"><%= link_to "⬆", controller: "posts", action: "upvote", id: post.id %></div> 
            <div class="down"><%= link_to "⬇", controller: "posts", action: "downvote", id: post.id %></div>
          </div></td>
        <td><%= link_to post.title, controller: "posts", action: "show", id: post.id %> </td>
        <td><%= post.score %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
