<%- model_class = Post -%>
<div class="page-header">
  <h1>The Couch Commentator</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Comment!</th>
      <th>Peoples Opinions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.score %>
            <%= link_to "⬆", controller: "posts", action: "upvote", id: post.id %> 
            <%= link_to "⬇", controller: "posts", action: "downvote", id: post.id %></td>
        <td><%= post.title %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
